@page
@model EAuction.Pages.Users.DetailsModel

@{
    ViewData["Title"] = Model.MyUser.NickName + "'s Profile";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>
<div class="row">
    <div class="col-md-4 col-lg-4">
        <div class="caption border" >
            <p>ID: @ViewData["id"]</p>
            <h3> @Model.MyUser.NickName</h3>
            <p>Feedback: @Model.MyUser.Feedback %</p>

            <p>Country: @Model.MyUser.Country</p>
            <button class="messageBtn btn btn-lg">Message</button>

        </div>
    </div>
    <div class="col-md-6 col-lg-6">
        <form class="hidden" type="post" id="messageForm" asp-action="post">
            <div class="form-group">
                <label asp-for="Message.Subject" class="control-label"></label>
                <input asp-for="Message.Subject" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Message.MessageBody" class="control-label"></label>
                <textarea asp-for="Message.MessageBody" class="form-control" ></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Send</button>
                </div>
        </form>
    </div>
<div class="panel-footer">
    <a class="btn btn-lg"
       asp-page="./Detail"
       asp-route-Id="@Model.MyUser.Id">
        <i class="glyphicon glyphicon-zoom-in"></i>
    </a>
    @*<a class="btn btn-lg"
           asp-page="./Edit"
           asp-route-Id="@Model.Id">
            <i class="glyphicon glyphicon-edit"></i>
        </a>
        <a class="btn btn-lg"
           asp-page="./Delete"
           asp-route-Id="@Model.Id">
            <i class="glyphicon glyphicon-trash"></i>
        </a>*@
</div>

</div>
@section Scripts{
    <script>
        $(function () {

            $('button').click(function () {
                $('#messageForm').removeClass('hidden');
            });
        });
    </script>
}
